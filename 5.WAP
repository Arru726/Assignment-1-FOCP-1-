//5. Wap to check whether a number is Perfect number or not

  int main() {
  int number,i,sum=0;
  printf("Enter any number = \n");
  scanf("%d",&number);
  for(i=1; i<=number/2; i++) {
  if(number%i==0) {
  sum = sum+i;
}
}
  if(sum == number && number>0) {
  printf("%d is a Perfect number",number);
}
  else
  { printf("%d is not a Perfect number",number);
}
  return 0;
}
