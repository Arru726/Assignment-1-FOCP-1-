/* 9. WAP to print following Pyramid:
0 0
01 01
010 010
0101 0101
0101001010 */


  int main() {
  int rows, i, j, k;
  printf("Enter the number of rows: ");
  scanf("%d", &rows);
  for (i = 1; i <= rows; i++) {
  for (j = 1; j <= i; j++) {
  if (j % 2 == 0) {
  printf("1");
  } else {
  printf("0");
}
}
  for (k = 1; k <= (2 * (rows - i)); k++) {
  printf(" ");
}
  for (j = 1; j <= i; j++) {
  if (j % 2 == 0) {
  printf("1");
  } else {
  printf("0");
}
}
  printf("\n");
}
  return 0;
}
