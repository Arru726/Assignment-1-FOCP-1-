/* 8. WAP to print below mentioned pattern:
1
01
101
0101
10101 */


  int main() {
  int rows, i, j;
  printf("Enter the number of rows: ");
  scanf("%d", &rows);
  for (i = 1; i <= rows; i++) {
  for (j = 1; j <= i; j++) {
  if ((i + j) % 2 == 0) {
  printf("1");
  } else {
  printf("0");
}
}
  printf("\n");
}
  return 0;
}
